<script>
    $(document).ready(function() {
        $('#modal').on('shown.bs.modal', function (e) {
            $(document).keypress(function(e) {
                var keycode = (e.keyCode ? e.keyCode : e.which);
                if (keycode == '13') {
                    updShop();
                }
            });
        });

        $("#sp_search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#sp_table tbody tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    function showModal(stock_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Редактирование акции');
        $.ajax({
            type: 'POST',
            url: "/dict/stock-edit/",
            data: {stock_id : stock_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $(".modal").modal('show');
    }

    function delStock(stock_id, stock_name, ob){
        if (!confirm("Вы действительно хотите удалить акцию " + stock_name + " ?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/stock-list/mode/del/stock_id/" + stock_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Акция ' + stock_name + ' удалена');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
</script>