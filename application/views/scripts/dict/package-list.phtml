<script>
    $(document).ready(function() {
        $('#modal').on('shown.bs.modal', function (e) {
            $(document).keypress(function(e) {
                var keycode = (e.keyCode ? e.keyCode : e.which);
                if (keycode == '13') {
                    updShop();
                }
            });
        });

        $("#sp_search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#sp_table tbody tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function showModal(package_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Редактирование');
        $.ajax({
            type: 'POST',
            url: "/dict/package-edit/",
            data: {package_id : package_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $(".modal").modal('show');
    }

    function delPackage(package_id, package_name, ob){
        if (!confirm("Вы действительно хотите удалить комнату " + package_name + " ?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/package-list/mode/del/package_id/" + package_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Комната ' + package_name + ' удалена');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
</script>