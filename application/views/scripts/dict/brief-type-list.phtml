<script>
    $(document).ready(function() {
    });

    function showItemTable(brief_type_id){
        $("#item_list").load("/dict/brief-item-form/", {brief_type_id: brief_type_id});
    }
    function showItem(brief_type_id, ob){
        $('#reload_type').attr('value', 'all');
        $('#brief_type_id').val(brief_type_id);
        $('#type_table tbody tr').removeClass('selected-td');
        $(ob).closest('tr').addClass('selected-td');
        showItemTable(brief_type_id);
    }
    function showModal(brief_type_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Редактирование');
        $.ajax({
            type: 'POST',
            url: "/dict/brief-type-edit/",
            data: {brief_type_id : brief_type_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $(".modal").modal('show');
    }

    function briefItemEdit(brief_item_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-sm');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Редактирование вариантов');

        var brief_type_id = $('#brief_type_id').val()
        if(brief_type_id == 0){
            alert('Выберите право!');
            return;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/brief-item-edit/",
            data:{
                brief_type_id: brief_type_id,
                brief_item_id: brief_item_id
            },
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $(".modal").modal('show');
    }
    function del_brief_type(brief_type_id, brief_type_name, ob){
        if (!confirm("Вы действительно хотите удалить бриф " + brief_type_name + " ?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/brief-type-list/mode/del/brief_type_id/" + brief_type_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Бриф ' + brief_type_name + ' удален');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }

    function startReload() {
        if($('#reload_type').val() == 'all'){
            $('.loading-widget').aceCard('reload');
            $('#reload_type').attr('value', '');
        }else if($('#reload_type').val() == 'menu'){
            $('#menu_widget').aceCard('reload');
            $('#reload_type').attr('value', '');
        }
    }

    function stopReload() {
        $('.loading-widget').aceCard('stopLoading');
    }

    $(document).ajaxStart(function() {
        startReload();
    });

    $(document).ajaxStop(function() {
        stopReload();
    });
</script>