    function delItem(brief_item_id, ob){
        if (!confirm('Вы действительно хотите удалить?')) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/brief-item-form/mode/del/",
            data:{"brief_item_id" : brief_item_id},
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Категория удалена');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
</script>