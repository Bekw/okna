        </div>
        <div class="form-group">
            <label class="control-label " for="category_code">Код</label>
            <input type="text" id="category_code" placeholder="Код" class="form-control" value="<?=$this->row['category_code']?>" name="category_code">
            <div class="clearfix"></div>
        </div>
        <div class="form-group">
            <label class="control-label " for="is_active">Активный</label>
            <div>
                <select class="form-control" id="is_active" name="is_active" required>
                    <option value="0" <?=is_selected_html(0, $this->row['is_active'] ?? null)?>>Нет</option>
                    <option value="1" <?=is_selected_html(1, $this->row['is_active'] ?? null)?>>Да</option>
