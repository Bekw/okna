<script>
    $( document ).ready(function() {
        $('#project_list').load('/work/work-project-list/work_id/<?=$this->work_id?>');
        $('#smeta_list').load('/work/work-smeta-list/work_id/<?=$this->work_id?>');
        $('#measure_doc').load('/work/work-measure-doc/work_id/<?=$this->work_id?>');
        $('#material_type_id').on('change', function() {
            material_type_id = this.value;
            loadMaterialSelect(material_type_id);
        });
        $('#material_id').on('change', function() {
            material_id = this.value;
            loadMaterialPrice(material_id);
        });
        loadMarkList();
    });
    function autoLoadSmeta(work_id){
        if (!confirm("Вы действительно хотите обновить смету? Все старые записи удалятся!")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/auto-smeta-load/work_id/" + work_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Смета обновлена');
                    $('#smeta_list').load('/work/work-smeta-list/work_id/<?=$this->work_id?>');
                }
            }
        });
    }
    function loadMaterialSelect(material_type_id) {
        main_loader_show();
        $.ajax({
            type: 'POST',
            url: "/work/material-select-form/material_type_id/"+ material_type_id +"/",
            success: function(data){
                $('#material').html(data);
                main_loader_hide();
            }
        });
    }
    function loadMarkList() {
        main_loader_show();
        $.ajax({
            type: 'POST',
            url: "/work/work-mark-list/work_id/"+ <?=$this->work_id?> +"/",
            success: function(data){
                $('#mark_list').html(data);
                main_loader_hide();
            }
        });
    }
    function loadMaterialPrice(material_id) {
        main_loader_show();
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/get-price/material_id/"+ material_id +"/",
            success: function(data){
                $("#material_price").val(data.result['value']);
                main_loader_hide();
            }
        });
    }
    function upd_work(){
        var fd = new FormData($("#form_work")[0]);
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/upd/",
            data: fd,
            success: function(data){
                if(data.result['status'] == false){
                    alert(data.result['error']);
                    toastError('Ошибка при редактировании');
                } else{
                    toastSucces('Заказ отредактирован');
                    window.location.reload();
                }
            },
            cache: false,
            contentType: false,
            processData: false
        });
    }
    function showStageForm(work_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Добавить этап');
        $.ajax({
            type: 'POST',
            url: "/work/work-stage-form/",
            data: {"work_id" : work_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $("#modal-container").filter('.modal').modal();
    }

    function showProjectForm(work_id, work_project_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Добавить проект');
        $.ajax({
            type: 'POST',
            url: "/work/work-project-edit/",
            data: {"work_id" : work_id,
                   "work_project_id" : work_project_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $("#modal-container").filter('.modal').modal();
    }
    function showMeasureDocForm(work_id, work_measure_doc_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Добавить вложение');
        $.ajax({
            type: 'POST',
            url: "/work/work-measure-doc-edit/",
            data: {"work_id" : work_id,
                   "work_measure_doc_id" : work_measure_doc_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $("#modal-container").filter('.modal').modal();
    }

    function delworkStage(work_stage_id, ob){
        if (!confirm("Вы действительно хотите удалить этап?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/del-stage/work_stage_id/" + work_stage_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Этап удален');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }

    function delworkProject(work_project_id, ob){
        if (!confirm("Вы действительно хотите удалить проект?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/del-project/work_project_id/" + work_project_id + "/",
