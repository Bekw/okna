                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Проект удален');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
    function delMeasureDoc(work_measure_doc_id, ob){
        if (!confirm("Вы действительно хотите удалить вложение?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/del-measure-doc/work_measure_doc_id/" + work_measure_doc_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Вложение удалено');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
    function acceptProject(work_project_id, is_accepted){
        if (!confirm("Вы действительно хотите утвердить проект")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/work/work-edit/mode/accept-project/work_project_id/" + work_project_id + "/is_accepted/" + is_accepted + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Проект утвержден');
                    $('#project_list').load('/work/work-project-list/work_id/<?=$this->work_id?>');
                }
            }
        });
    }

</script>