    function upd_remont(){
        var fd = new FormData($("#form_remont")[0]);
        $.ajax({
            type: 'POST',
            url: "/remont/remont-edit/mode/upd/",
            data: fd,
            success: function(data){
                if(data.result['status'] == false){
                    alert(data.result['error']);
                    toastError('Ошибка при редактировании');
                } else{
                    toastSucces('Ремонт отредактирован');
                    window.location.reload();
                }
            },
            cache: false,
            contentType: false,
            processData: false
        });
    }

    function showRoomForm(remont_id, remont_room_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Добавить комнату');
        $.ajax({
            type: 'POST',
            url: "/remont/remont-room-edit/",
            data: {"remont_id" : remont_id,
                   "remont_room_id" : remont_room_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $("#modal-container").filter('.modal').modal();
    }

    function showProjectForm(remont_id, remont_project_id){
        $('#modal-container').find('.modal-dialog').addClass('modal-md');
        $("#modal-header-container").empty();
        $("#modal-body-container").empty();
        $('#modal-header-container').append('Добавить проект');
        $.ajax({
            type: 'POST',
            url: "/remont/remont-project-edit/",
            data: {"remont_id" : remont_id,
                   "remont_project_id" : remont_project_id},
            async: true,
            success: function(data){
                $("#modal-body-container").html(data);
            }
        });
        $("#modal-container").filter('.modal').modal();
    }

    function delRemontRoom(remont_room_id, ob){
        if (!confirm("Вы действительно хотите удалить комнату ?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/remont/remont-edit/mode/del-room/remont_room_id/" + remont_room_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Комната удалена');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }

    function delRemontProject(remont_project, ob){
        if (!confirm("Вы действительно хотите удалить проект ремонта?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/remont/remont-edit/mode/del-project/remont_project_id/" + remont_project_id + "/",
