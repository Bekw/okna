                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Проект ремонта удален');
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
    function acceptProject(remont_project_id, is_accepted){
        if (!confirm("Вы действительно хотите утвердить проект ремонта?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/remont/remont-edit/mode/accept-project/remont_project_id/" + remont_project_id + "/is_accepted/" + is_accepted + "/",
            success: function(data){
                if(data.result['status'] == false){
                    bootboxAlert(data.result['error']);
                }
                else{
                    toastSucces('Проект ремонта утвержден');
                    $('#project_list').load('/remont/remont-project-list/remont_id/<?=$this->remont_id?>');
                }
            }
        });
    }

