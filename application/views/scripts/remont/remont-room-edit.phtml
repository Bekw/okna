    <form id="form_id">
        <input type="hidden" value="<?=$this->remont_id?>" name="remont_id">
        <input type="hidden" value="<?=$this->remont_room_id?>" name="remont_room_id">

        <div class="form-group">
            <label class="control-label " for="remont_room_name">Наименование</label>
            <input type="text" id="document_name" placeholder="Наименование" class="form-control" value="<?=$this->row['remont_room_name'] ?? null?>" name="remont_room_name">
